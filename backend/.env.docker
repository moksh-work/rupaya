# .env.docker - Docker-specific environment variables for local development
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=rupaya
DB_PASSWORD=secure_password_here
DB_NAME=rupaya_dev

# Redis
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=your_jwt_secret_key_here_min_32_chars_long_development_only
REFRESH_TOKEN_SECRET=your_refresh_token_secret_min_32_chars_long_development_only

# Encryption
ENCRYPTION_KEY=your_encryption_key_min_32_chars_long_development_only

# Logging
LOG_LEVEL=debug
DEBUG=rupaya:*
