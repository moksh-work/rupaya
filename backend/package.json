{
  "name": "rupaya-backend",
  "version": "1.0.0",
  "description": "RUPAYA Money Manager Backend API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --testEnvironment=node",
    "test:watch": "jest --watch --testEnvironment=node",
    "test:unit": "jest __tests__/unit/ --coverage",
    "test:integration": "jest __tests__/integration/ --coverage",
    "test:smoke": "RUN_SMOKE_TESTS=true jest __tests__/smoke/ --coverage --testEnvironment=node",
    "test:e2e": "RUN_E2E_TESTS=true jest __tests__/e2e/ --coverage --testEnvironment=node",
    "test:remote": "RUN_REMOTE_TESTS=true jest __tests__/e2e/remote-api.test.js --runInBand --testEnvironment=node --coverage",
    "test:api": "RUN_API_TESTS=true jest tests/ --coverage --testEnvironment=node",
    "test:all": "RUN_E2E_TESTS=true RUN_REMOTE_TESTS=true RUN_SMOKE_TESTS=true RUN_API_TESTS=true jest --coverage --testEnvironment=node",
    "test:bail": "jest --bail --testEnvironment=node",
    "test:verbose": "jest --verbose --testEnvironment=node",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "migrate": "knex migrate:latest",
    "migrate:test": "NODE_ENV=test knex migrate:latest",
    "seed": "knex seed:run",
    "seed:test": "NODE_ENV=test knex seed:run",
    "healthcheck": "node -e \"require('http').get('http://localhost:3000/health', (r) => {if (r.statusCode !== 200) throw new Error(r.statusCode)})\"",
    "docker:dev": "bash docker-start-dev.sh",
    "docker:prod": "bash docker-start-prod.sh",
    "docker:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f backend"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "hibp": "^15.2.1",
    "joi": "^18.0.2",
    "joi-password-complexity": "^5.2.0",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "pg": "^8.18.0",
    "qrcode": "^1.5.4",
    "redis": "^5.11.0",
    "speakeasy": "^2.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.14",
    "supertest": "^7.2.2"
  },
  "overrides": {
    "glob": {
      "minimatch": "9.0.9"
    }
  }
}
