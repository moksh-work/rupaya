{
  "name": "rupaya-backend",
  "version": "1.0.0",
  "description": "RUPAYA Money Manager Backend API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "healthcheck": "node -e \"require('http').get('http://localhost:3000/health', (r) => {if (r.statusCode !== 200) throw new Error(r.statusCode)})\"",
    "docker:dev": "bash docker-start-dev.sh",
    "docker:prod": "bash docker-start-prod.sh",
    "docker:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-validator": "^7.0.0",
    "pg": "^8.11.0",
    "knex": "^3.0.0",
    "dotenv": "^16.3.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "aws-sdk": "^2.1400.0",
    "redis": "^4.6.0",
    "joi": "^17.9.0",
    "uuid": "^9.0.0",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.0",
    "winston": "^3.10.0",
    "joi-password-complexity": "^5.1.0",
    "hibp": "^13.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
